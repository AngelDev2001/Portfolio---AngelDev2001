// MobileMenu.astro
---

<!-- Mobile Menu Overlay -->
<div
        id="mobile-menu-overlay"
        class="fixed inset-0 bg-black/95 backdrop-blur-sm z-50 hidden transition-opacity duration-300"
>
    <div class="flex flex-col h-full p-6">
        <!-- Close Button -->
        <div class="flex justify-end mb-12">
            <button
                    id="close-mobile-menu"
                    class="text-white p-2 hover:text-yellow-600 transition-colors"
                    aria-label="Cerrar menú"
            >
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Navigation Links -->
        <nav class="flex flex-col items-center justify-center flex-1 gap-8">
            <a
                    href="#inicio"
                    class="mobile-menu-link text-white text-3xl font-bold hover:text-yellow-600 transition-colors"
            >
                Inicio
            </a>
            <a
                    href="#proyectos"
                    class="mobile-menu-link text-gray-400 text-2xl hover:text-white transition-colors"
            >
                Proyectos
            </a>
            <a
                    href="#sobre-mi"
                    class="mobile-menu-link text-gray-400 text-2xl hover:text-white transition-colors"
            >
                Sobre Mí
            </a>
            <a
                    href="#contacto"
                    class="mobile-menu-link text-gray-400 text-2xl hover:text-white transition-colors"
            >
                Contacto
            </a>
        </nav>

        <!-- Social Links -->
        <div class="flex justify-center gap-6 mt-auto">
            <a
                    href="https://linkedin.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-12 h-12 flex items-center justify-center text-gray-400 hover:text-white transition-colors"
                    aria-label="LinkedIn"
            >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
            </a>

            <a
                    href="https://github.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-12 h-12 flex items-center justify-center text-gray-400 hover:text-white transition-colors"
                    aria-label="GitHub"
            >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
