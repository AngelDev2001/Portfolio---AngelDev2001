---
// Projects.astro
const projects = [
    {
        title: "Rediseño App de Finanzas",
        description: "Un rediseño centrado en el usuario para una aplicación de finanzas personales, mejorando la usabilidad y la claridad visual.",
        image: "/projects/finance-app.jpg",
        tags: ["UX/UI Design", "Mobile", "Fintech"]
    },
    {
        title: "Plataforma de E-learning",
        description: "Diseño y desarrollo de una plataforma interactiva para cursos online, enfocada en la gamificación y el compromiso del estudiante.",
        image: "/projects/elearning.jpg",
        tags: ["Web Design", "React", "Education"]
    },
    {
        title: "Dashboard de Analítica",
        description: "Creación de un dashboard intuitivo para la visualización de datos complejos en tiempo real, facilitando la toma de decisiones.",
        image: "/projects/dashboard.jpg",
        tags: ["Data Viz", "Dashboard", "Analytics"]
    }
];
---

<section id="proyectos" class="min-h-screen bg-black py-20 px-6">
    <div class="container mx-auto max-w-7xl">
        <!-- Header -->
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
                Proyectos Destacados
            </h2>
            <p class="text-gray-400 text-lg max-w-3xl mx-auto">
                Una selección de trabajos que demuestran mi pasión por el diseño y la experiencia de usuario.
            </p>
        </div>

        <!-- Projects Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((project) => (
                    <div class="group relative bg-zinc-900 rounded-2xl overflow-hidden border border-zinc-800 hover:border-yellow-600/50 transition-all duration-300">
                        <!-- Project Image -->
                        <div class="relative h-64 bg-gradient-to-br from-zinc-800 to-zinc-900 overflow-hidden">
                            <div class="absolute inset-0 flex items-center justify-center">
                                <!-- Placeholder para la imagen del proyecto -->
                                <div class="w-full h-full bg-zinc-800 flex items-center justify-center">
                                    <svg class="w-20 h-20 text-zinc-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            </div>
                            <!-- Overlay on hover -->
                            <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                <span class="text-white font-semibold text-lg">Ver Proyecto</span>
                            </div>
                        </div>

                        <!-- Project Info -->
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-white mb-3">
                                {project.title}
                            </h3>
                            <p class="text-gray-400 mb-4 line-clamp-3">
                                {project.description}
                            </p>

                            <!-- Tags -->
                            <div class="flex flex-wrap gap-2">
                                {project.tags.map((tag) => (
                                        <span class="px-3 py-1 bg-zinc-800 text-gray-300 text-xs rounded-full">
                  {tag}
                </span>
                                ))}
                            </div>
                        </div>
                    </div>
            ))}
        </div>

        <!-- CTA -->
        <div class="text-center mt-16">
            <a
                    href="#contacto"
                    class="inline-block px-8 py-4 bg-yellow-600 hover:bg-yellow-700 text-black font-semibold rounded-full transition-all duration-300 transform hover:scale-105"
            >
                Ver Todos los Proyectos
            </a>
        </div>
    </div>
</section>